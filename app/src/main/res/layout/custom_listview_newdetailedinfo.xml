<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    android:background="#00000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="340dp"
        android:background="#20232323"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/imageView_detailedInfoIcon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:background="#00000000" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_detailedInfoTerminal"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="终端号：" />

            <TextView
                android:id="@+id/textView_detailedInfoTerminalInput"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="" />

            <TextView
                android:id="@+id/textView_detailedInfoEarNumber"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="耳标号：" />

            <TextView
                android:id="@+id/textView_detailedInfoEarNumberInput"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_detailedInfoVariety"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="品种：" />

            <TextView
                android:id="@+id/textView_detailedInfoVarietyInput"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="" />

            <TextView
                android:id="@+id/textView_detailedInfoGender"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="性别：" />

            <TextView
                android:id="@+id/textView_detailedInfoGenderInput"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_detailedInfoStreakColor"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="花色：" />

            <TextView
                android:id="@+id/textView_detailedInfoStreakColorInput"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="" />

            <TextView
                android:id="@+id/textView_detailedInfoMonthAge"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="月龄：" />

            <TextView
                android:id="@+id/textView_detailedInfoMonthAgeInput"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_detailedInfoState"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="状态：" />

            <TextView
                android:id="@+id/textView_detailedInfoStateInput"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="" />

            <TextView
                android:id="@+id/textView_detailedInfoMaster"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="主人：" />

            <TextView
                android:id="@+id/textView_detailedInfoMasterInput"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>