<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/background_login">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#20232323"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="终端号"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText_estrusterminaltoQuery"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="text"
                android:textColor="@color/white"
                android:text="" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="起始时间"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText_estrusStartData"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:textColor="@color/white" />

            <Button
                android:id="@+id/button_estrusStartData"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="#65ffffff"
                android:text="选取起始时间"
                android:textColor="@color/lightblue"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_feedEndData"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="结束时间"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText_estrusEndData"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:textColor="@color/white" />

            <Button
                android:id="@+id/button_estrusEndData"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="#65ffffff"
                android:text="选取结束时间"
                android:textColor="@color/lightblue"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_estrusQuery"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@color/grass"
                android:text="查询"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="30dp"
            android:text="最近运动数据"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="#20232323">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="83dp"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:gravity="center"
                android:background="#40232323"
                android:textColor="@color/white"
                android:text="终端号" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="87dp"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:background="#40232323"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="轻度运动" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="87dp"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:background="#40232323"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="中度运动" />
            <TextView
                android:id="@+id/textView25"
                android:layout_width="87dp"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:background="#40232323"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="剧烈运动" />

        </LinearLayout>

        <ListView
            android:id="@+id/listview_estrus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>