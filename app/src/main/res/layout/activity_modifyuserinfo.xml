<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_login"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/imageView_usericon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/imageview_border"
            app:srcCompat="@drawable/icon_user" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="点击头像以更改"/>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:layout_width="200dp"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:text="用户角色:"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/textView_userid"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:text="牧民"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="350dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:text="姓名:"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/editText_modifuUserInfoName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text=""/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="性别:"
            android:textColor="@color/white"

            android:textSize="18sp"/>

        <Spinner
            android:id="@+id/spinner_userGender"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="18sp" />
        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="联系方式:"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/editText_modifyUserInfoPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text=""/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="居住地址:"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/editTextModifyUserInfoAddress"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text=""/>
        <Button
            android:id="@+id/button_saveModify"
            android:layout_width="240dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@color/grass"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </LinearLayout>
</LinearLayout>